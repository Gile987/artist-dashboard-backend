generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      Role
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String
  releases  Release[]
  royalties Royalty[]
}

model Release {
  id          Int           @id @default(autoincrement())
  title       String
  releaseDate DateTime
  coverUrl    String?
  audioUrl    String?
  artistId    Int
  status      ReleaseStatus @default(PENDING)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  streams     Int           @default(0)
  totalRoyalty Float         @default(0) // Total royalty for all tracks in the release
  artist      User          @relation(fields: [artistId], references: [id])
  tracks      Track[]
}

model Track {
  id        Int       @id @default(autoincrement())
  title     String
  duration  Int
  isrc      String?   @unique
  releaseId Int
  fileUrl   String?
  streams   Int       @default(0)
  royalty   Float     @default(0) // Royalty calculated as streams * 0.01
  royalties Royalty[]
  release   Release   @relation(fields: [releaseId], references: [id], onDelete: Cascade)
}

model Royalty {
  id       Int    @id @default(autoincrement())
  amount   Float
  period   String
  trackId  Int
  artistId Int
  artist   User   @relation(fields: [artistId], references: [id])
  track    Track  @relation(fields: [trackId], references: [id])
}

enum Role {
  artist
  admin
}

enum ReleaseStatus {
  PENDING
  APPROVED
  REJECTED
}
